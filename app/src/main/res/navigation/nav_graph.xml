<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/home_fragment">

    <fragment
        android:id="@+id/home_fragment"
        android:name="android.app.ui.HomeFragment"
        android:label="@string/home_fragment">

        <action
            android:id="@+id/action_home_to_image_upload"
            app:destination="@id/permissions_fragment" />
        <action
            android:id="@+id/action_home_to_image_list"
            app:destination="@id/fragment_image_list" />

    </fragment>

    <fragment
        android:id="@+id/permissions_fragment"
        android:name="android.app.ui.imageupload.PermissionsFragment"
        android:label="PermissionsFragment" >

        <action
            android:id="@+id/action_permissions_to_camera"
            app:destination="@id/camera_fragment"
            app:popUpTo="@id/permissions_fragment"
            app:popUpToInclusive="true" />

    </fragment>

    <fragment
        android:id="@+id/camera_fragment"
        android:name="android.app.ui.imageupload.CameraFragment"
        android:label="CameraFragment" >

        <action
            android:id="@+id/action_camera_to_permissions"
            app:destination="@id/permissions_fragment"
            app:popUpTo="@id/camera_fragment"
            app:popUpToInclusive="true"/>

    </fragment>

    <fragment
        android:id="@+id/fragment_image_list"
        android:name="android.app.ui.imagelist.ImageListFragment"
        android:label="ImageList" >

        <action
            android:id="@+id/action_fullscreen_fragment"
            app:destination="@id/fragment_full_image"
            app:popUpTo="@id/fragment_image_list"
            app:popUpToInclusive="true"/>

    </fragment>

    <fragment
        android:id="@+id/fragment_full_image"
        android:name="android.app.ui.imagelist.FullImageFragment"
        android:label="Image" >
        <argument
            android:defaultValue="@null"
            android:name="@string/image_url"
            app:argType="string"
            app:nullable="true"/>
    </fragment>

</navigation>